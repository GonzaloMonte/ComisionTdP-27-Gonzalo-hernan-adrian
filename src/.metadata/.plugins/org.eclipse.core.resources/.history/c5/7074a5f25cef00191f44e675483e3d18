package Personajes;

import Main.*;
import Visitor.Visitor;
import Visitor.VisitorDisparo;

 public class Disparo extends Entidad{
	 protected int alcance;
	 protected Pair pos;
	 protected String direccion;
	 
	 public Disparo(Heroe h,int alcance,String s,Pair p){
		 super(100);
		 pos=new Pair(p.getX(),p.getY());
		 direccion=s;
		 visitor=new VisitorDisparo();
		 x=p.getX();
		 y=p.getY();
	 }
	 public String queSoy() {
		 return "disparo";
	 }
	
	public void accept(Visitor v) {
		// TODO Auto-generated method stub
		
	}


	public void actualizar() {
			mover();
			System.out.print("llege0");	
	}

	public void mover() {
		int xn=0;
		int yn=0;
		int xv=x;
		int yv=y;
		
		if(direccion.equals("abajo")) {
				yn=y;
				xn=x+1;
		}
		else if(direccion.equals("arriba")) {
				yn=y;
				xn=x-1;
			}
			else if(direccion.equals("derecha")) {
				yn=y+1;
				xn=x;
			}
				else if(direccion.equals("izquierda")) {
					yn=y-1;
					xn=x;
				}
		
		if (y!=0) {
			x=xn;
			y=yn;
		
		Mapa.mapa.agregarEntidad(this);
		Mapa.celdas[xv][yv].liberarCelda();
		}
		
		
	}
	
	public Visitor getVisitor() {
		
		return visitor;
	}
 }
